package edu.nashcc.cars;

import java.util.Scanner;

public class UseAuto {

	public static void main(String[] args) {
		String choice = userInput();
		switch(choice){
		case "1":
			Chevy ch = new Chevy();
		}
		
	} // end of main()
	
	public static String userInput(){
		String choice;
		Scanner kb = new Scanner(System.in);
		System.out.println(userOptions());
		choice = kb.nextLine();
		kb.close();
		return choice;
		
	}
	public static String userOptions(){
		StringBuilder sb = new StringBuilder();
		sb.append("1 - Chevy\n");
		sb.append("2 - Ford\n");
		sb.append("\n0 - Quit");
		return sb.toString();
	}
}

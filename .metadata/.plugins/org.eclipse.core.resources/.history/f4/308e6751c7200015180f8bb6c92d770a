package edu.nashcc.cars;

public class Chevy extends Auto {

	private String model;
	public Chevy() {
		super("Chevy");
		setPrice();
	}
	public void setPrice(){
		//int[] carPrices = {20000, 30000};
		String choice;
		
		
		this.price = 22000; // $22,000
		// use a switch to set price based on modelOptions()
	}
	public String modelOptions(){
		StringBuilder sb = new StringBuilder();
		sb.append("1 - Camaro\n");
		sb.append("2 - Cavalier\n");
		
		return sb.toString();
	}
	public void setModel(String choice){
		switch(choice){
		case "1":
			this.model = "Camaro";
			this.price = 25000;
			break;
		case "2":
			this.model = "Cavalier";
			this.price = 15000;
			break;
		default:
			this.model = "";
		}
	}
	public String getModel(){
		return model;
	}
}

